<p id="notice"><%= notice %></p>

<h1>Favorite Movie Characters</h1>

<table>
  <thead>
    <tr>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @characters.each do |character| %>
      <ul>
        <li><%= character.name %></li>
        <li><%= image_tag character.photo_url, class: "poster" %></li>
        <li><%= link_to 'Show', character %></li>
        <li><%= link_to 'Edit', edit_character_path(character) %></li>
        <li><%= link_to 'Destroy', character, method: :delete, data: { confirm: 'Are you sure?' } %></li>
      </ul>
    <% end %>
  </tbody>
</table>

<br>

